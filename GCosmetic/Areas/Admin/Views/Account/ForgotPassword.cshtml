
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div class="content-header row">
</div>
<div class="content-body">
    <div class="auth-wrapper auth-v1 px-2">
        <div class="auth-inner py-2">
            <!-- Forgot Password v1 -->
            <div class="card mb-0">
                <div class="card-body">
                    <a href="javascript:void(0);" class="brand-logo">
                        <img src="@AppState["logo"]" class="rounded mr-50" alt="profile image" width="100">
                    </a>

                    <h4 class="card-title mb-1">Forgot Password? 🔒</h4>
                    <p class="card-text mb-2">Nhập email của bạn và chúng tôi sẽ gửi cho bạn hướng dẫn để đặt lại mật khẩu của bạn</p>

                    <form class="auth-forgot-password-form mt-2" action="@Url.Action("ForgotPassword","Account")" method="POST">
                        <div class="form-group">
                            <label for="forgot-password-email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="forgot-password-email" name="EmailID" placeholder="john@gmail.com" aria-describedby="forgot-password-email" tabindex="1" autofocus />
                        </div>
                        <button class="btn btn-primary btn-block" tabindex="2">Send reset link</button>
                    </form>

                    <p class="text-center mt-2">
                        <a href="@Url.Action("Login","Account")"> <i data-feather="chevron-left"></i> Back to login </a>
                    </p>
                    @if (ViewBag.Status == 1)
                    {
                        <div class="alert alert-success" role="alert">
                            <div class="alert-body"><strong>Success!</strong> @ViewBag.Message</div>
                        </div>
                    }
                    @if(ViewBag.Status == 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div class="alert-body"><strong>Error!</strong> @ViewBag.Message</div>
                        </div>
                    }

                </div>
            </div>
            <!-- /Forgot Password v1 -->
        </div>
    </div>

</div>

